<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="#F3F8F1"
    android:orientation="vertical"
    android:focusable="true"
    android:focusableInTouchMode="true">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Qeydiyyat: "
        android:textSize="35sp"
        android:textColor="#039700"
        android:gravity="center"
        android:layout_margin="25dp"
        android:textStyle="bold"
        />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="5dp"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="*"
            android:padding="5dp"
            android:textSize="20sp"
            android:textColor="@android:color/holo_red_dark"
            />
        <TextView
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:text="ad:"
            android:textSize="20sp"
            android:gravity="right"
            android:textColor="#ffff"
            android:background="@drawable/soldan_girde"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            />
        <EditText
            android:id="@+id/ad"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#039700"
            android:textSize="20sp"
            android:background="@drawable/sagdan_girde"
            android:padding="5dp"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="5dp"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="*"
            android:padding="5dp"
            android:textSize="20sp"
            android:textColor="@android:color/holo_red_dark"
            />
        <TextView
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:text="soyad:"
            android:textSize="20sp"
            android:gravity="right"
            android:textColor="#ffff"
            android:background="@drawable/soldan_girde"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            />
        <EditText
            android:id="@+id/soyad"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#039700"
            android:textSize="20sp"
            android:background="@drawable/sagdan_girde"
            android:padding="5dp"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="5dp"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="  "
            android:padding="5dp"
            android:textSize="20sp"
            android:textColor="@android:color/holo_red_dark"
            />
        <TextView
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:text="email:"
            android:textSize="20sp"
            android:gravity="right"
            android:textColor="#ffff"
            android:background="@drawable/soldan_girde"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            />
        <EditText
            android:id="@+id/email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#039700"
            android:textSize="20sp"
            android:background="@drawable/sagdan_girde"
            android:inputType="textEmailAddress"
            android:padding="5dp"
            />
    </LinearLayout>

    <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:layout_margin="5dp"
    >
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="  "
        android:padding="5dp"
        android:textSize="20sp"
        android:textColor="@android:color/holo_red_dark"
        />
    <TextView
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:text="telefon:"
        android:textSize="20sp"
        android:gravity="right"
        android:textColor="#ffff"
        android:background="@drawable/soldan_girde"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        />
        <com.santalu.maskedittext.MaskEditText
            android:id="@+id/telefon"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#039700"
            android:textSize="20sp"
            android:background="@drawable/sagdan_girde"
            android:inputType="phone"
            android:padding="5dp"
            app:met_mask="+994(##)###-##-##"/>

</LinearLayout>

    <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:layout_margin="5dp"
    >
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="*"
        android:padding="5dp"
        android:textSize="20sp"
        android:textColor="@android:color/holo_red_dark"
        />
    <TextView
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:text="cins:"
        android:textSize="20sp"
        android:gravity="right"
        android:textColor="#ffff"
        android:background="@drawable/soldan_girde"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
       />
        <RadioGroup
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@drawable/sagdan_girde"
            android:padding="3dp">
            <RadioButton
                android:id="@+id/kisi"
                android:layout_marginLeft="50dp"
                android:text="kişi"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="#039700"
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                />
            <RadioButton
                android:id="@+id/qadin"
                android:layout_marginLeft="20dp"
                android:text="qadın"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="#039700"
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                />

        </RadioGroup>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="5dp"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="*"
            android:padding="5dp"
            android:textSize="20sp"
            android:textColor="@android:color/holo_red_dark"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Doğum tarixi:"
            android:textSize="20sp"
            android:gravity="right"
            android:textColor="#ffff"
            android:background="@drawable/soldan_girde"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:paddingLeft="7dp"
            />
        <TextView
            android:hint="--/--/----"
            android:textColorHint="#A7AAA7"
            android:id="@+id/tarix"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:gravity="center"
            android:textColor="#039700"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            />

        <Button
            android:id="@+id/tarix_sec"
            android:layout_width="24dp"
            android:layout_height="wrap_content"
            android:background="#F3F8F1"
            android:drawableStart="@drawable/ic_calendar"
            android:textAllCaps="false"
            android:textColor="#039700"
             />
    </LinearLayout>

    <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="45dp"
    android:layout_marginLeft="5dp"
    android:layout_marginRight="5dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="*"
        android:padding="5dp"
        android:textSize="20sp"
        android:textColor="@android:color/holo_red_dark"
        />

    <TextView
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:text="LOGIN:"
        android:textSize="20sp"
        android:gravity="right"
        android:textColor="#ffff"
        android:background="@drawable/soldan_girde"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        />
    <EditText
        android:id="@+id/login"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#039700"
        android:textSize="20sp"
        android:background="@drawable/sagdan_girde"
        android:padding="5dp"
        />

</LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="*"
            android:padding="5dp"
            android:textSize="20sp"
            android:textColor="@android:color/holo_red_dark"
            />

        <TextView
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:text="şifrə:"
            android:textSize="20sp"
            android:gravity="right"
            android:textColor="#ffff"
            android:background="@drawable/soldan_girde"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            />
        <EditText
            android:id="@+id/parol"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#039700"
            android:textSize="20sp"
            android:background="@drawable/sagdan_girde"
            android:padding="5dp"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="*"
            android:padding="5dp"
            android:textSize="20sp"
            android:textColor="@android:color/holo_red_dark"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="şifrəni təkrarla:"
            android:textSize="20sp"
            android:paddingLeft="7dp"
            android:textColor="#ffff"
            android:background="@drawable/soldan_girde"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            />
        <EditText
            android:id="@+id/parol2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#039700"
            android:textSize="20sp"
            android:background="@drawable/sagdan_girde"
            android:padding="5dp"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:layout_marginTop="50dp">

        <Button
            android:id="@+id/imtina"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableStart="@drawable/ic_back"
            android:text="imtina et"
            android:textAllCaps="false"
            android:textSize="25sp"
            android:background="@drawable/girde_forma"
            android:textColor="#FF0000"
            android:layout_marginRight="15dp"
            android:layout_marginLeft="15dp"
            />
        <Button
            android:id="@+id/save"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="yadda saxla"
            android:textAllCaps="false"
            android:textSize="25sp"
            android:background="@drawable/girde_forma"
            android:textColor="#ffff"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            />
    </LinearLayout>

</LinearLayout>